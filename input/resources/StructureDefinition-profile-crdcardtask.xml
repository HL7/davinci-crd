<?xml version="1.0" encoding="UTF-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://hl7.org/fhir ../../input-cache/schemas/R4/fhir-single.xsd">
	<id value="profile-crdcardtask"/>
	<url value="http://hl7.org/fhir/us/davinci-crd/StructureDefinition/profile-crdcardtask"/>
	<name value="CRDCardTask"/>
	<title value="CRD Card Task"/>
	<status value="draft"/>
	<experimental value="false"/>
	<description value="This profile specifies constraints on the Task resource to support the creation of a deferred task."/>
	<kind value="resource"/>
	<abstract value="false"/>
	<type value="Task"/>
	<baseDefinition value="http://hl7.org/fhir/StructureDefinition/Task"/>
	<derivation value="constraint"/>
	<differential>
		<element id="Task.status">
			<path value="Task.status"/>
			<type>
				<code value="code"/>
			</type>
			<fixedCode value="ready"/>
			<mustSupport value="true"/>
		</element>
		<element id="Task.intent">
			<path value="Task.intent"/>
			<type>
				<code value="code"/>
			</type>
			<fixedCode value="proposal"/>
			<mustSupport value="true"/>
		</element>
		<element id="Task.code">
			<path value="Task.code"/>
			<short value="Action type"/>
			<min value="1"/>
			<type>
				<code value="CodeableConcept"/>
			</type>
			<mustSupport value="true"/>
			<binding>
				<strength value="required"/>
				<description value="Type of action in a CDS Hook suggestion action"/>
				<valueSet value="http://hl7.org/fhir/us/davinci-crd/ValueSet/cardActions"/>
			</binding>
		</element>
		<element id="Task.description">
			<path value="Task.description"/>
			<short value="Action description"/>
			<min value="1"/>
		</element>
		<element id="Task.focus">
			<path value="Task.focus"/>
			<short value="Action resource"/>
			<comment value="If omitted, then details are provided in the description and action can't be automated."/>
			<min value="0"/>
		</element>
		<element id="Task.for">
			<path value="Task.for"/>
			<short value="Patient"/>
			<min value="1"/>
			<type>
				<code value="Reference"/>
				<targetProfile value="http://hl7.org/fhir/us/core/StructureDefinition/us-core-patient"/>
			</type>
			<mustSupport value="true"/>
		</element>
		<element id="Task.authoredOn">
			<path value="Task.authoredOn"/>
			<short value="Date card created"/>
			<min value="1"/>
			<mustSupport value="true"/>
		</element>
		<element id="Task.requester">
			<path value="Task.requester"/>
			<short value="Payer making suggestion"/>
			<min value="1"/>
			<type>
				<code value="Reference"/>
				<targetProfile value="http://hl7.org/fhir/us/davinci-crd/StructureDefinition/profile-organization"/>
			</type>
			<mustSupport value="true"/>
		</element>
		<element id="Task.owner">
			<path value="Task.owner"/>
			<short value="User for whom the card is displayed"/>
			<comment value="This can be re-assigned to someone else."/>
			<min value="1"/>
			<type>
				<code value="Reference"/>
				<targetProfile value="http://hl7.org/fhir/us/davinci-crd/StructureDefinition/profile-practitioner"/>
			</type>
			<mustSupport value="true"/>
		</element>
	</differential>
</StructureDefinition>

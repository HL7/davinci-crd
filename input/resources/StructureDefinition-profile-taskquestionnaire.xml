<?xml version="1.0" encoding="UTF-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://hl7.org/fhir ../../input-cache/schemas/R4/fhir-single.xsd">
	<id value="profile-taskquestionnaire"/>
	<url value="http://hl7.org/fhir/us/davinci-crd/StructureDefinition/profile-taskquestionnaire"/>
	<name value="TaskQuestionnaire"/>
	<title value="CRD Questionnaire Task"/>
	<status value="draft"/>
	<experimental value="false"/>
	<description value="This profile specifies constraints on the Task resource to support requests for form (Questionnaire) completion."/>
	<kind value="resource"/>
	<abstract value="false"/>
	<type value="Task"/>
	<baseDefinition value="http://hl7.org/fhir/uv/sdc/StructureDefinition/sdc-task"/>
	<derivation value="constraint"/>
	<differential>
		<element id="Task.basedOn">
			<path value="Task.basedOn"/>
			<requirements value="Allows linking the Questionnaire to the particular 'request' that triggered its creation."/>
			<mustSupport value="true"/>
		</element>
		<element id="Task.status">
			<path value="Task.status"/>
			<type>
				<code value="code"/>
			</type>
			<fixedCode value="ready"/>
			<mustSupport value="true"/>
		</element>
		<element id="Task.intent">
			<path value="Task.intent"/>
			<type>
				<code value="code"/>
			</type>
			<fixedCode value="order"/>
			<mustSupport value="true"/>
		</element>
		<element id="Task.for">
			<path value="Task.for"/>
			<min value="1"/>
			<type>
				<code value="Reference"/>
				<targetProfile value="http://hl7.org/fhir/us/core/StructureDefinition/us-core-patient"/>
			</type>
			<mustSupport value="true"/>
		</element>
		<element id="Task.encounter">
			<path value="Task.encounter"/>
			<comment value="This should be set to the same encounter as specified in the launch context (if any)."/>
			<type>
				<code value="Reference"/>
				<targetProfile value="http://hl7.org/fhir/us/davinci-crd/StructureDefinition/profile-encounter"/>
			</type>
			<mustSupport value="true"/>
		</element>
		<element id="Task.authoredOn">
			<path value="Task.authoredOn"/>
			<min value="1"/>
			<mustSupport value="true"/>
		</element>
		<element id="Task.requester">
			<path value="Task.requester"/>
			<short value="Payer requesting form completion"/>
			<min value="1"/>
			<type>
				<code value="Reference"/>
				<targetProfile value="http://hl7.org/fhir/us/davinci-crd/StructureDefinition/profile-organization"/>
			</type>
			<mustSupport value="true"/>
		</element>
		<element id="Task.owner">
			<path value="Task.owner"/>
			<comment value="This can be populated within the CRD client to delegate responsibility for filling out the form to someone else."/>
			<min value="0"/>
			<max value="1"/>
			<type>
				<code value="Reference"/>
				<targetProfile value="http://hl7.org/fhir/us/davinci-crd/StructureDefinition/profile-practitioner"/>
			</type>
			<mustSupport value="true"/>
		</element>
		<element id="Task.reasonCode">
			<path value="Task.reasonCode"/>
			<requirements value="Captures additional details about why the form is needed.  E.g. &quot;For prior authorization&quot; or &quot;For audit documentation&quot;."/>
			<mustSupport value="true"/>
			<binding>
				<strength value="extensible"/>
				<description value="CRD Task Reason"/>
				<valueSet value="http://hl7.org/fhir/us/davinci-crd/ValueSet/taskReasonCode"/>
			</binding>
		</element>
		<element id="Task.input:afterCompletion">
			<path value="Task.input"/>
			<sliceName value="afterCompletion"/>
			<definition value="Indicates the action to take after completing the form."/>
			<min value="1"/>
			<mustSupport value="true"/>
		</element>
		<element id="Task.input:afterCompletion.type">
			<path value="Task.input.type"/>
			<type>
				<code value="CodeableConcept"/>
			</type>
			<patternCodeableConcept>
				<coding>
					<system value="http://hl7.org/fhir/us/davinci-crd/CodeSystem/temp"/>
					<code value="after-completion-action"/>
				</coding>
			</patternCodeableConcept>
			<mustSupport value="true"/>
		</element>
		<element id="Task.input:afterCompletion.valueCodeableConcept">
			<path value="Task.input.valueCodeableConcept"/>
			<type>
				<code value="CodeableConcept"/>
			</type>
			<mustSupport value="true"/>
			<binding>
				<strength value="extensible"/>
				<description value="CRD After Completion"/>
				<valueSet value="http://hl7.org/fhir/us/davinci-crd/ValueSet/afterCompletionCode"/>
			</binding>
		</element>
	</differential>
</StructureDefinition>

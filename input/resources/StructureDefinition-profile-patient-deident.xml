<?xml version="1.0" encoding="UTF-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://hl7.org/fhir ../../input-cache/schemas/R4/fhir-single.xsd">
	<id value="profile-patient-deident"/>
	<url value="http://hl7.org/fhir/us/davinci-crd/StructureDefinition/profile-patient-deident"/>
	<name value="PatientDident"/>
	<title value="CRD Deidentified Patient"/>
	<status value="draft"/>
	<experimental value="false"/>
	<description value="This profile specifies additional constraints on the US Core Patient profile to support coverage requirements discovery without revealing patient identity."/>
	<kind value="resource"/>
	<abstract value="false"/>
	<type value="Patient"/>
	<baseDefinition value="http://hl7.org/fhir/StructureDefinition/Patient"/>
	<derivation value="constraint"/>
	<differential>
		<element id="Patient">
			<path value="Patient"/>
			<short value="CRD Deidentified Patient"/>
			<definition value="This profile specifies additional constraints on the US Core Patient profile to support coverage requirements discovery without revealing patient identity."/>
		</element>
		<element id="Patient.text">
			<path value="Patient.text"/>
			<max value="0"/>
		</element>
		<element id="Patient.identifier">
			<path value="Patient.identifier"/>
			<max value="0"/>
		</element>
		<element id="Patient.name">
			<path value="Patient.name"/>
			<max value="0"/>
			<type>
				<code value="HumanName"/>
			</type>
		</element>
		<element id="Patient.telecom">
			<path value="Patient.telecom"/>
			<max value="0"/>
		</element>
		<element id="Patient.gender">
			<path value="Patient.gender"/>
			<min value="1"/>
			<mustSupport value="true"/>
		</element>
		<element id="Patient.birthDate">
			<path value="Patient.birthDate"/>
			<comment value="Birthdate SHALL be limited to only one year in length unless the use-case requires a precision of the month (typically infants and toddlers)."/>
			<max value="1"/>
			<type>
				<code value="date"/>
			</type>
			<maxLength value="7"/>
			<constraint>
				<key value="patient-deident-birthMonth"/>
				<severity value="error"/>
				<human value="Birthdate can only include month if 2 years old or less"/>
				<expression value="true or ((today() - $this) &lt;= 24 months) or value.length()=4"/>
				<xpath value="true()"/>
			</constraint>
			<mustSupport value="true"/>
		</element>
		<element id="Patient.deceased[x]">
			<path value="Patient.deceased[x]"/>
			<max value="0"/>
		</element>
		<element id="Patient.address">
			<path value="Patient.address"/>
			<mustSupport value="true"/>
		</element>
		<element id="Patient.address.type">
			<path value="Patient.address.type"/>
			<max value="1"/>
			<mustSupport value="true"/>
		</element>
		<element id="Patient.address.text">
			<path value="Patient.address.text"/>
			<max value="0"/>
		</element>
		<element id="Patient.address.line">
			<path value="Patient.address.line"/>
			<max value="0"/>
		</element>
		<element id="Patient.address.city">
			<path value="Patient.address.city"/>
			<max value="0"/>
		</element>
		<element id="Patient.address.district">
			<path value="Patient.address.district"/>
			<max value="0"/>
		</element>
		<element id="Patient.address.state">
			<path value="Patient.address.state"/>
			<max value="1"/>
		</element>
		<element id="Patient.address.postalCode">
			<path value="Patient.address.postalCode"/>
			<max value="0"/>
		</element>
		<element id="Patient.address.country">
			<path value="Patient.address.country"/>
			<mustSupport value="true"/>
		</element>
		<element id="Patient.address.period">
			<path value="Patient.address.period"/>
			<max value="0"/>
		</element>
		<element id="Patient.multipleBirth[x]">
			<path value="Patient.multipleBirth[x]"/>
			<max value="0"/>
		</element>
		<element id="Patient.photo">
			<path value="Patient.photo"/>
			<max value="0"/>
		</element>
		<element id="Patient.contact">
			<path value="Patient.contact"/>
			<max value="0"/>
		</element>
		<element id="Patient.communication">
			<path value="Patient.communication"/>
			<mustSupport value="true"/>
		</element>
		<element id="Patient.communication.language">
			<path value="Patient.communication.language"/>
			<min value="1"/>
			<max value="1"/>
			<mustSupport value="true"/>
		</element>
		<element id="Patient.link">
			<path value="Patient.link"/>
			<max value="0"/>
		</element>
	</differential>
</StructureDefinition>
